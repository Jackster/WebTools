---
import TextFileViewer from '../../components/TextFileViewer';
import ToolHeader from '../../components/ToolHeader';
import '../../styles/tool-page.css';
import '../../styles/global.css';
const title = 'Text File Viewer - View and Tail Log Files';
const description = 'Open and view text files with auto-tail functionality for .log and .txt files';
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="tool-page">
    <ToolHeader toolTitle="Text File Viewer" toolDescription={description} />
    
    <main class="tool-content">
      <TextFileViewer client:load />
    </main>
    
    <footer class="tool-footer">
      <p>Built with Astro and hosted on Cloudflare Pages</p>
    </footer>
  </body>
</html>
